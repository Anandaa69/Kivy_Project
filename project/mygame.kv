<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Welcome to My Game!'
            font_size: 32

        Button:
            text: 'Start Game'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'game'  # สลับไปที่ GameScreen

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Game Started!'
            font_size: 24

