#Player setting
<Player>:
    base_width: 60
    base_height: 60
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rotation
            origin: self.x+self.base_width / 2, self.y+self.base_height / 2
    canvas:    
        Ellipse:
            source: 'assets/player.png'
            pos: self.pos
            size: self.base_width, self.base_height
    canvas.after:
        PopMatrix

<Enemy>:
    base_width: 65
    base_height: 65
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rotation
            origin: self.x+self.base_width / 2, self.y+self.base_height / 2
    canvas:    
        Ellipse:
            source: 'assets/enemy.png'
            pos: self.pos
            size: self.base_width, self.base_height
    canvas.after:
        PopMatrix

<Bullet>:
    base_width: 10
    base_height: 10
    canvas:
        Color:
            rgba: 1, 165/255, 0, 1
        Ellipse:
            source: 'assets/bullet.png'
            pos: self.pos
            size: self.base_width, self.base_height

<Heal_item>:
    base_width: 30
    base_height: 30
    canvas:
        Rectangle:
            source: 'assets/heal.png'
            pos: self.pos
            size: self.base_width, self.base_height

<Ammo_item>:
    base_width: 30
    base_height: 30
    canvas:
        Rectangle:
            source: 'assets/ammo.png'
            pos: self.pos
            size: self.base_width, self.base_height

<UpgradePopup>:
    title: "STORE"
    size_hint: (0.7, 0.7)
    auto_dismiss: False

    FloatLayout:
        Image:
            source: 'assets/bg_store.png'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Image:
            source: 'assets/store_img.png'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.2,'center_y': 0.5}
        
        Button:
            id: up_hp
            text: "UPGRADE!"
            size_hint: (155/1280, 58/720)
            pos_hint: {'center_x': 1050/1280,'center_y': (720-230)/720}
            on_press: root.upgrade_hp()

        Button:
            id: up_speed
            text: "UPGRADE!"
            size_hint: (155/1280, 58/720)
            pos_hint: {'center_x': 1050/1280,'center_y': (720-410)/720}
            on_press: root.upgrade_speed()

        Button:
            id: b_bullet
            text: "BUY!"
            size_hint: (155/1280, 58/720)
            pos_hint: {'center_x': 850/1280,'center_y': (720-625)/720}
            on_press: root.buy_bullet()

        Button:
            id: b_heal
            text: "BUY!"
            size_hint: (155/1280, 58/720)
            pos_hint: {'center_x': 1200/1280,'center_y': (720-625)/720}
            on_press: root.buy_heal()

        Button:
            text: "Close"
            size_hint: (0.3, 0.15)
            pos_hint: {"center_x": 0.5}
            on_press: root.dismiss()

        Label: # Coin left in Store
            text: str(root.coin)
            font_size: 40
            pos_hint: {'center_x': 1100/1280, 'center_y': (720-40)/720}

#On MainMenu Screen
<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Welcome to My Game!'
            font_size: 32

        Button:
            text: 'Start Game'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'game'  # Go to GameScreen
        
        Button:
            text: 'Setting'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'setting_menu'  # Go to GameScreen

<SettingScreen>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: '1280 x 720'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: root.select_screen(0)
        
        Button:
            text: '1980 x 1080'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: root.select_screen(1)

        Button:
            text: 'Back'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'main_menu'

