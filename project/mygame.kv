#Player setting
<Player>:
    base_width: 50
    base_height: 50
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rotation
            origin: self.x+self.base_width / 2, self.y+self.base_height / 2
    canvas:    
        Ellipse:
            source: 'assets/player.png'
            pos: self.pos
            size: self.base_width, self.base_height
    canvas.after:
        PopMatrix

<Bullet>:
    canvas:
        Ellipse:
            source: 'assets/bullet.png'
            pos: self.pos
            size: 10, 10

#On MainMenu Screen
<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Welcome to My Game!'
            font_size: 32

        Button:
            text: 'Start Game'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'game'  # สลับไปที่ GameScreen
        
        Button:
            text: 'Setting'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'setting_menu'  # สลับไปที่ GameScreen

<SettingScreen>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: '1280 x 720'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: root.select_screen(0)
        
        Button:
            text: '1980 x 1080'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: root.select_screen(1)

        Button:
            text: 'Back'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'main_menu'

#On Game Screen
<GameScreen>:
    Image:
        source: 'assets/bg.png'
        # allow_stretch: True  # ทำให้ภาพขยายได้
        # keep_ratio: False  # ปิดการรักษาสัดส่วนของภาพ
    FloatLayout:
        Player:
            id: player