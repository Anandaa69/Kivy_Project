#Player setting
<Player>:
    canvas:
        Ellipse:
            source: 'assets/Player.png'
            pos: self.pos
            size: 50, 50

#On MainMenu Screen
<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Welcome to My Game!'
            font_size: 32

        Button:
            text: 'Start Game'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'game'  # สลับไปที่ GameScreen

#On Game Screen
<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Game Started!'
            font_size: 24

        Button:
            text: 'Go back'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'main_menu'

        Player:
            id: player