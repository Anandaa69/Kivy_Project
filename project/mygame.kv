#Player setting
<Player>:
    base_width: 50
    base_hegiht: 50
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rotation
            origin: self.pos[0]+self.base_width / 2, self.pos[1]+self.base_hegiht / 2
    canvas:    
        Ellipse:
            source: 'assets/Player.png'
            pos: self.pos
            size: self.base_width, self.base_hegiht
    canvas.after:
        PopMatrix

#On MainMenu Screen
<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Welcome to My Game!'
            font_size: 32

        Button:
            text: 'Start Game'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'game'  # สลับไปที่ GameScreen
        
        Button:
            text: 'Setting'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'setting_menu'  # สลับไปที่ GameScreen

<SettingScreen>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: '1280 x 720'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: root.select_screen(0)
        
        Button:
            text: '1980 x 1080'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: root.select_screen(1)

        Button:
            text: 'Back'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'main_menu'

#On Game Screen
<GameScreen>:
    
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Game Started!'
            font_size: 24

        Button:
            text: 'Go back'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'main_menu'

        Player:
            id: player