#Player setting
<Player>:
    base_width: 50
    base_height: 50
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rotation
            origin: self.x+self.base_width / 2, self.y+self.base_height / 2
    canvas:    
        Ellipse:
            source: 'assets/player.png'
            pos: self.pos
            size: self.base_width, self.base_height
    canvas.after:
        PopMatrix

<Enemy>:
    base_width: 50
    base_height: 50
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rotation
            origin: self.x+self.base_width / 2, self.y+self.base_height / 2
    canvas:    
        Ellipse:
            source: 'assets/player.png'
            pos: self.pos
            size: self.base_width, self.base_height
    canvas.after:
        PopMatrix

<Bullet>:
    base_width: 10
    base_height: 10
    canvas:
        Ellipse:
            source: 'assets/bullet.png'
            pos: self.pos
            size: self.base_width, self.base_height

#On MainMenu Screen
<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Welcome to My Game!'
            font_size: 32

        Button:
            text: 'Start Game'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'game'  # Go to GameScreen
        
        Button:
            text: 'Setting'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'setting_menu'  # Go to GameScreen

<SettingScreen>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: '1280 x 720'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: root.select_screen(0)
        
        Button:
            text: '1980 x 1080'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: root.select_screen(1)

        Button:
            text: 'Back'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = 'main_menu'

#On Game Screen
<GameScreen>:

    #BackGround
    Image:
        source: 'assets/bg.png'
        # allow_stretch: True  # ทำให้ภาพขยายได้
        # keep_ratio: False  # ปิดการรักษาสัดส่วนของภาพ
    
    Player:
        id: player

    # --- UI ---
    Label: # bullet left
        text: str(player.score)
        font_size: 60
        pos_hint: {'center_x': 1084/1280, 'center_y': (720-42)/720}

    Image: #UI (under right)
        source: 'assets/under_ui.png'
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'right': 0.94, 'y': 0.015} 
    Label: # bullet left
        text: str(player.bullet_left)
        font_size: 40
        pos_hint: {'center_x': 0.742, 'center_y': 0.06}
    Label: # enemy left
        text: str(root.enemy_counts)
        font_size: 40
        pos_hint: {'center_x': 0.845, 'center_y': 0.06}

    Image: #Health_UI (top left)
        source: 'assets/health.png'
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': 0.08, 'center_y': 0.934}
    Label:
        text: str(player.hp_left)
        font_size: 40
        pos_hint: {'center_x': 0.097, 'center_y': 0.934}
    
    Button:
        text: 'Back'
        size_hint: 0.05, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        on_press: app.root.current = 'main_menu'
